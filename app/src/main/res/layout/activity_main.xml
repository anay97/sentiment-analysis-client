<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moodifier"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/heading"
        android:textSize="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/query"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/response"
        app:layout_constraintTop_toBottomOf="@+id/query"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tryAgain"
        android:text="@string/try_again"
        app:layout_constraintTop_toBottomOf="@+id/response"
        android:textAlignment="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/api"
        android:hint="@string/enter_api_url"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tryAgain"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeAPI"
        android:text="@string/change_api"
        app:layout_constraintTop_toBottomOf="@+id/api"
        android:textAlignment="center"
        />

</android.support.constraint.ConstraintLayout>